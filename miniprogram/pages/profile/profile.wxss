.profile{
  background: linear-gradient(135deg,#56c8ff,#6f99fc) no-repeat;
  height: 400rpx;
  text-align: center;
  position: relative;
  width: 100%;
}

.profile-img{
  width: 200rpx;
  height: 200rpx;
  display: block;
  overflow: hidden;
  border-radius: 50%;
  position: absolute;
  left: 50%;
  transform: translate(-50%, 60rpx);
}

.profile-name{
  font-size: 36rpx;
  color: #fff;
  position: absolute;
  left: 50%;
  transform: translate(-50%, 270rpx);
}


.appreciate{
  width: 100%;
  position: absolute;
  bottom: 5rpx;
  text-align: center;
  font-size: 15rpx;
  color: whitesmoke
}